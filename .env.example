# ===========================================
# Kurator Production Environment Variables
# Copy this file to .env and configure values
# ===========================================

# Database Configuration
DB_USER=kurator_user
DB_PASSWORD=your_strong_password_here

# JWT Settings
# Generate with: openssl rand -base64 64
JWT_SECRET=your_very_long_secret_key_at_least_64_characters_long_for_security

# Encryption Key (min 32 characters)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_encryption_key_32_bytes_minimum

# Application URLs
API_URL=https://rocketcredit.com.ua/api
CORS_ORIGINS=https://rocketcredit.com.ua,https://www.rocketcredit.com.ua

# GitHub Container Registry
GITHUB_REPOSITORY=vkarabedyants/kurator
GITHUB_USER=your_github_username
GITHUB_TOKEN=your_github_personal_access_token

# Optional: Nginx with SSL
# Set to "with-nginx" to enable nginx profile
COMPOSE_PROFILES=
